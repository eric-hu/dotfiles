set tabstop=2
set shiftwidth=2
set expandtab

" Maximum column width
set textwidth=100

" Enable line numbers
set number

" Yanks go to system clipboard
set clipboard=unnamedplus

" These two options go together to make searching case insensitive by default
set ignorecase
set smartcase
    
" Mouse enabled in all modes
set mouse=a

colorscheme delek
